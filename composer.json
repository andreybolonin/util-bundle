{
    "name": "tps/util-bundle",
    "type": "symfony-bundle",
    "version": "0.1.0",
    "description": "the bundle offers some helpful..helpers :D for developing sf2 apps",
    "homepage": "https://github.com/leberknecht/util-bundle",
    "minimum-stability": "dev",
    "authors": [
        {
            "name": "Delf Tonder",
            "homepage": "https://github.com/leberknecht/util-bundle"
        }
    ],

    "require": {
        "php":                              ">=5.4.0",
        "symfony/finder":                   ">=2.3.0",
        "symfony/filesystem":               ">=2.3.0",
        "symfony/framework-bundle":         ">=2.3.0",
        "symfony/twig-bundle":              ">=2.3.0",
        "twig/twig":                        ">=1.0,~1.0",
        "sensio/framework-extra-bundle":    ">=2.3.0",
        "symfony/validator":                ">=2.3.0",
        "symfony/translation":              ">=2.3.0",
        "symfony/form":                     ">=2.3.0",
        "symfony/console":                  ">=2.3.0"
    },

    "require-dev": {
        "symfony/yaml":             ">=2.3.0",
        "phpunit/phpunit":          "4.5.*@dev",
        "satooshi/php-coveralls":   "0.7.*@dev",
        "symfony/browser-kit":      ">=2.3.0",
        "symfony/routing":          ">=2.3.0"
    },

    "autoload": {
        "psr-0": { "tps\\UtilBundle": "" }
    },

    "target-dir": "tps/util-bundle"
}
